<%= form_with(model: @treatment, local: true) do |f| %>
  <% if @treatment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@treatment.errors.count, "error") %> prohibited this treatment from being saved:</h2>

      <ul>
        <% @treatment.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="field col-12 col-md-4 mt-3">
    <%= f.label :appointment_id %>
    <%= f.text_field :appointment_id, class: "form-control" %>
  </div>

    <div class="field col-12 col-md-4 mt-3">
    <%= f.label :user_id %>
    <%= f.text_field :user_id, class: "form-control" %>
  </div>

    <div class="field col-12 col-md-4 mt-3">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

    <div class="field col-12 col-md-4 mt-3">
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control" %>
  </div>

    <div class="field col-12 col-md-4 mt-3">
    <%= f.label :place %>
    <%= f.text_field :place, class: "form-control" %>
  </div>

    <div class="field col-12 col-md-4 mt-3">
    <%= f.label :date %>
    <%= f.datetime_select :date, class: "form-control" %>
  </div>

    <div class="field col-12 col-md-4 mt-3">
    <%= f.label :kind %>
    <%= f.number_field :kind, class: "form-control" %>
  </div>

  </div>
  <div class="row">
    <div class="col-12 text-center mt-5">
      <div class="actions btn-group">
        <%= link_to treatments_path, :class => "btn btn-outline-primary text-uppercase" do %>
          <%= icon('fas', 'arrow-circle-left', 'Voltar', class: 'strong') %>
        <% end %>
        <%= f.button icon('fas', 'save', 'salvar', class: 'strong'), class: "btn btn-primary text-uppercase" %>
      </div>
    </div>
  </div>
<% end %>
